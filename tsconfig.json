{
  "compilerOptions": {
    "lib": ["DOM", "ES2017"],
    "module": "commonjs",
    "moduleResolution": "Node",
    "target": "ES6",
    "jsx": "react-jsx",
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": true,
    "baseUrl": "src",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["typings/**/*.d.ts", "node_modules/@types"],
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "typings/**/*.d.ts",
    "node_modules/@types"
  ],
  "exclude": ["**/*.js"]
}
